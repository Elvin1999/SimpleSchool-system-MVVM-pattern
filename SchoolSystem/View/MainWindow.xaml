<Window x:Class="SchoolSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Label HorizontalContentAlignment="Center">
            <Label.Content>
                School System
            </Label.Content>
            <Label.FontSize>
                35
            </Label.FontSize>
            <Label.FontFamily>
                Comic Sans MS
            </Label.FontFamily>
        </Label>
        <StackPanel Margin="100">
            <Button Margin="20" Name="ShowStudent" Command="{Binding ShowStudents}">
                <Button.Content>Show Students</Button.Content>
                <Button.Width>200</Button.Width>
                <Button.Height>50</Button.Height>
            </Button>
            <Button Margin="20" Name="Showteacher" Click="Showteacher_Click">
                <Button.Content>Show Teacher</Button.Content>
                <Button.Width>200</Button.Width>
                <Button.Height>50</Button.Height>
            </Button>
        </StackPanel>
    </Grid>
</Window>
